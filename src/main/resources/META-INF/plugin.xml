<idea-plugin>
    <id>io.github.nbirillo.dataset.anonymizer</id>
    <name>Dataset Anonymizer</name>
    <vendor url="https://research.jetbrains.org/">JetBrains Research</vendor>

    <depends>com.intellij.java</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>com.intellij.modules.python</depends>

    <description><![CDATA[
    An IntelliJ-based IDE plugin for code anonymization in datasets.
    ]]></description>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <appStarter implementation="org.jetbrains.research.ml.dataset.anonymizer.Runner"/>
    </extensions>
</idea-plugin>
